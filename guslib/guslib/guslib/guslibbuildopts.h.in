/**
  Define the multithread support.

  GUSLIB_THREAD_SUPPORT = 0
    No support for threading.
  GUSLIB_THREAD_SUPPORT = 1
    Support for threading.
*/

#ifndef GUSLIB_THREAD_SUPPORT
#define GUSLIB_THREAD_SUPPORT ${GUSLIB_THREAD_SUPPORT_NUM}
#endif

/**
  Define the type of thread support for guslib

  GUSLIB_THREAD_PROVIDER = 0
    No support for threading.
  GUSLIB_THREAD_PROVIDER = 1
    C++11 thread support.
  GUSLIB_THREAD_PROVIDER = 2
    TinyThread lib provides threading functionality.
  GUSLIB_THREAD_PROVIDER = 3
    Boost libraries provide threading functionality.
*/
#ifndef GUSLIB_THREAD_PROVIDER
#define GUSLIB_THREAD_PROVIDER ${GUSLIB_THREAD_PROVIDER_NUM}
#endif

